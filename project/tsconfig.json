{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}